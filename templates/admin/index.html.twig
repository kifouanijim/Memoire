<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f7f6;
            margin: 0;
            padding: 0;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        .header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .stats-overview {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px;
        }
        .stat-box {
            flex: 1;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .stat-box h3 {
            margin: 0;
            font-size: 18px;
            color: #555;
        }
        .stat-box p {
            font-size: 24px;
            font-weight: bold;
            margin: 5px 0;
        }
        .charts-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        .chart-box {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        canvas {
            width: 100% !important;
            height: 300px !important;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="header">üìä Tableau de Bord Admin</div>

        <!-- Statistiques cl√©s -->
        <div class="stats-overview">
            <div class="stat-box">
                <h3>Total Ventes</h3>
                <p id="totalSales">0</p>
            </div>
            <div class="stat-box">
                <h3>Total T√©l√©phones Vendus</h3>
                <p id="totalPhonesSold">0</p>
            </div>
        </div>

        <!-- Graphiques -->
        <div class="charts-container">
            <div class="chart-box">
                <h2>üìÖ Ventes par Jour</h2>
                <canvas id="salesByDayChart"></canvas>
            </div>

            <div class="chart-box">
                <h2>üìÖ T√©l√©phones Vendus par Jour</h2>
                <canvas id="phonesSoldByDayChart"></canvas>
            </div>

            <div class="chart-box">
                <h2>üìÜ Ventes par Mois</h2>
                <canvas id="salesByMonthChart"></canvas>
            </div>

            <div class="chart-box">
                <h2>‚≠ê Retour par Jour</h2>
                <canvas id="reviewsByDayChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        // R√©cup√©ration des donn√©es depuis PHP
        const reviewsByDay = JSON.parse('{{ reviewsByDay|raw }}');
        const dates = JSON.parse('{{ dates|raw }}');
        const salesCountByDay = JSON.parse('{{ salesCountByDay|raw }}');
        const phonesSoldByDay = JSON.parse('{{ phonesSoldByDay|raw }}');
        const salesByMonth = JSON.parse('{{ salesByMonth|raw }}');

        // Calcul des totaux
        const totalSales = salesCountByDay.reduce((acc, curr) => acc + curr.sales_count, 0);
        const totalPhonesSold = phonesSoldByDay
        .map(entry => parseInt(entry.total_phones_sold, 10)) // S'assurer que la valeur est bien un nombre
        .reduce((acc, curr) => acc + curr, 0);
        document.getElementById("totalSales").innerText = totalSales;
        document.getElementById("totalPhonesSold").innerText = totalPhonesSold;

        // Fonction pour cr√©er un graphique
        function createChart(ctx, type, labels, data, label, color) {
            return new Chart(ctx, {
                type: type,
                data: {
                    labels: labels,
                    datasets: [{
                        label: label,
                        data: data,
                        backgroundColor: color + '0.5)',
                        borderColor: color + '1)',
                        borderWidth: 1,
                        hoverBorderWidth: 3,
                        fill: type === 'line'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } }
                }
            });
        }

        // Graphiques
        createChart(
            document.getElementById('reviewsByDayChart').getContext('2d'),
            'bar',
            dates,
            reviewsByDay,
            'Reviews par Jour',
            'rgba(54, 162, 235, '
        );

        createChart(
            document.getElementById('salesByDayChart').getContext('2d'),
            'bar',
            salesCountByDay.map(entry => entry.day),
            salesCountByDay.map(entry => entry.sales_count),
            'Ventes par Jour',
            'rgba(75, 192, 192, '
        );

        createChart(
            document.getElementById('phonesSoldByDayChart').getContext('2d'),
            'bar',
            phonesSoldByDay.map(entry => entry.day),
            phonesSoldByDay.map(entry => entry.total_phones_sold),
            'T√©l√©phones Vendus par Jour',
            'rgba(255, 159, 64, '
        );

        createChart(
            document.getElementById('salesByMonthChart').getContext('2d'),
            'line',
            salesByMonth.map(entry => entry.month),
            salesByMonth.map(entry => entry.sales_count),
            'Ventes par Mois',
            'rgba(255, 99, 132, '
        );
        
    </script>
</body>
</html>
