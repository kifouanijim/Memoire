{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e0f0ff, #ffffff);
            scroll-behavior: smooth;
        }

        .navbar {
            width: 100vw;
            box-sizing: border-box;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #007bff;
            padding: 1em 2em;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-left: 20px;
            font-weight: 500;
            font-size: 14px;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        body {
            padding-top: 70px;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            font-size: 2.5rem;
            color: #333;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

        a:hover {
            text-decoration: underline;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .button-group {
            text-align: center;
            margin-top: 30px;
        }

        .button-group a {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }

        .button-group a:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="navbar">
        <div><strong><a href="{{ path('app_dash') }}">CertiDeal</a></strong></div>
        <div>
            <a href="{{ path('app_reviews_index') }}">Retour</a>
            <a href="{{ path('app_sales_index') }}">Telephone à vendre</a>
        </div>
    </div>

    <h1>Products index</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="actions">
                    <a href="{{ path('app_products_show', {'id': product.id}) }}">Show</a>
                    <a href="{{ path('app_products_edit', {'id': product.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('app_products_new') }}">Créer un nouveau produit</a>
        <a href="{{ path('app_dashboard') }}">Retour au tableau de bord</a>
    </div>
{% endblock %}
