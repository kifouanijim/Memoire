{% extends 'base.html.twig' %}

{% block title %}Sales{% endblock %}

{% block body %}
    <h1>Sales</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sale.id }}</td>
            </tr>
            <tr>
                <th>Product_id</th>
                <td>{{ sale.productId }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ sale.quantity }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ sale.totalPrice }}</td>
            </tr>
            <tr>
                <th>Sale_date</th>
                <td>{{ sale.saleDate ? sale.saleDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sales_index') }}">back to list</a>

    <a href="{{ path('app_sales_edit', {'id': sale.id}) }}">edit</a>

    {{ include('sales/_delete_form.html.twig') }}
