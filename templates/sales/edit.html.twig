{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Modifier</h1>

        {{ include('sales/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <a href="{{ path('app_sales_index') }}" class="btn-back">Retour à la liste</a>

        {{ include('sales/_delete_form.html.twig') }}
    </div>

    <style>
        .form-container {
            width: 80%;
            margin: 2rem auto;
            background-color: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .btn-back {
            display: inline-block;
            margin-top: 1rem;
            background-color: #6c757d;
            color: white;
            padding: 12px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}
