{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e0f0ff, #ffffff);
            scroll-behavior: smooth;
        }

        .navbar {
            width: 100vw;
            box-sizing: border-box;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #007bff;
            padding: 1em 2em;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-left: 20px;
            font-weight: 500;
            font-size: 14px;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        body {
            padding-top: 70px;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            font-size: 2.5rem;
            color: #333;
        }

        .dashboard-wrapper {
            padding: 2rem;
        }

        .dashboard-wrapper a {
            display: inline-block;
            margin: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }

        .dashboard-wrapper a:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="navbar">
        <div><strong>CertiDeal</a></strong></div>
        <div>
            <a href="{{ path('app_reviews_index') }}">Retour</a>
            <a href="{{ path('app_sales_index') }}">Telephone à vendre</a>
        </div>
    </div>

    <div class="dashboard-wrapper">
        <h1>Bienvenue</h1>
      
        <div class="dashboard-links">
            <!-- Liens supplémentaires ici -->
        </div>
    </div>
{% endblock %}
