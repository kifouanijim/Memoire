{% extends 'base.html.twig' %}

{% block title %}Reviews index{% endblock %}

{% block body %}
    <h1>Reviews index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_id</th>
                <th>Product_id</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Sentiment</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.userId }}</td>
                <td>{{ review.productId }}</td>
                <td>{{ review.rating }}</td>
                <td>{{ review.comment }}</td>
                <td>{{ review.sentiment }}</td>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_reviews_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('app_reviews_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reviews_new') }}">Create new</a>
{% endblock %}
