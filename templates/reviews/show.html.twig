{% extends 'base.html.twig' %}

{% block title %}Détails du Retour{% endblock %}

{% block stylesheets %}
   <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f0f8ff, #ffffff);
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-top: 2rem;
            color: #333;
        }

        table {
            width: 70%;
            margin: 2rem auto;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(245, 238, 238, 0.1);
        }

        table th, table td {
            padding: 1rem;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
        }

        table tr:last-child td {
            border-bottom: none;
        }

        a {
            display: inline-block;
            margin: 1rem auto;
            text-align: center;
            text-decoration: none;
            color: white;
            background-color: #007bff;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        a:hover {
            background-color: #0056b3;
        }

        .actions {
            text-align: center;
            margin-bottom: 2rem;
        }

        .delete-form {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Détails du Retour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>IMEI</th>
                <td>{{ review.IMEI ?? 'Non spécifié' }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ review.niveau is not empty ? review.niveau|join(', ') : 'Non défini' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ review.commentaire ?? 'Aucun commentaire' }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ review.createdAt ? review.createdAt|date('d/m/Y H:i') : 'Non disponible' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_reviews_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_reviews_edit', {'id': review.id}) }}" class="btn btn-primary">Modifier</a>
    </div>

    <div class="mt-3">
        {{ include('reviews/_delete_form.html.twig') }}
    </div>
{% endblock %}
