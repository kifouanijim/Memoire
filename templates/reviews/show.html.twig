{% extends 'base.html.twig' %}

{% block title %}Détails du Retour{% endblock %}

{% block body %}
    <h1>Détails du Retour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>IMEI</th>
                <td>{{ review.IMEI ?? 'Non spécifié' }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ review.niveau is not empty ? review.niveau|join(', ') : 'Non défini' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ review.commentaire ?? 'Aucun commentaire' }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ review.createdAt ? review.createdAt|date('d/m/Y H:i') : 'Non disponible' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reviews_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_reviews_edit', {'id': review.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('reviews/_delete_form.html.twig') }}
{% endblock %}
