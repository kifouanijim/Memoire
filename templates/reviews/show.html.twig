{% extends 'base.html.twig' %}

{% block title %}Reviews{% endblock %}

{% block body %}
    <h1>Reviews</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ review.userId }}</td>
            </tr>
            <tr>
                <th>Product_id</th>
                <td>{{ review.productId }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ review.sentiment|join(', ') }}</td>
            </tr>
            <tr>
                <th>Sentiment</th>
                <td>{{ review.sentiment }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reviews_index') }}">back to list</a>

    <a href="{{ path('app_reviews_edit', {'id': review.id}) }}">edit</a>

    {{ include('reviews/_delete_form.html.twig') }}
{% endblock %}
