{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="logo-container">
    <img src="{{ asset('images/images.png') }}" alt="CertiDeal Logo">
</div>

<style>
/* ðŸŒŸ Style GÃ©nÃ©ral */
body {
    background-color: #f8f9fa;
    font-family: 'Poppins', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}
/* ðŸŒŸ Logo en haut Ã  gauche */
.logo-container {
    position: absolute;
    top: 20px;
    left: 20px;
}

.logo-container img {
    width: 50px; /* Ajuste la taille du logo */
    height: auto;
}


/* ðŸŒŸ Conteneur du formulaire */
.login-container {
    width: 100%;
    max-width: 400px;
    padding: 30px;
    background: #fff;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    text-align: center;
    transition: transform 0.3s ease-in-out;
}

.login-container:hover {
    transform: translateY(-3px);
}

/* ðŸŒŸ Titre */
.login-container h1 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
    font-weight: 600;
}

/* ðŸŒŸ Labels */
.login-container label {
    font-weight: 500;
    color: #555;
    display: block;
    text-align: left;
    margin-bottom: 5px;
}

/* ðŸŒŸ Champs de saisie */
.login-container .form-control {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    border-radius: 6px;
    border: 1px solid #ccc;
    transition: border-color 0.3s, box-shadow 0.3s;
}

.login-container .form-control:focus {
    border-color: #007bff;
    box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.3);
}

/* ðŸŒŸ Bouton de connexion */
.login-container .btn-primary {
    width: 100%;
    padding: 12px;
    background-color: #007bff;
    border: none;
    border-radius: 6px;
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
}

.login-container .btn-primary:hover {
    background-color: #0056b3;
    transform: scale(1.03);
}

/* ðŸŒŸ Alertes */
.login-container .alert {
    margin-bottom: 20px;
    color: #d9534f;
    font-weight: bold;
}

/* ðŸŒŸ Lien de dÃ©connexion */
.login-container a {
    color: #007bff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
}

.login-container a:hover {
    color: #0056b3;
}

/* ðŸŒŸ Espacement uniforme entre les champs */
.input-group {
    margin-bottom: 20px;
}

</style>

<!-- ðŸŒŸ Formulaire -->
<div class="login-container">
    <h1 class="h3">Sign</h1>
    
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="input-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="input-group">
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
