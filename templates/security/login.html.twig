{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="logo-container">
    <img src="{{ asset('images/images.png') }}" alt="CertiDeal Logo">
</div>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}
<!-- ðŸŒŸ Formulaire -->
<div class="login-container">
    <h1>Connexion</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous Ãªtes connectÃ© en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
            </div>
        {% endif %}

        <div class="input-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="input-group">
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">
            Se connecter
        </button>

        <div class="signup-link">
            <p>Pas encore de compte ? <a href="{{ path('app_inscription') }}">CrÃ©er un compte</a></p>
        </div>
    </form>
</div>
{% endblock %}
