{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #e0f0ff, #ffffff);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-container {
        width: 400px;
        background: #f9fcff;
        padding: 30px 25px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 90, 170, 0.2);
        animation: fadeIn 0.6s ease-out forwards;
        text-align: center;
        border: 1px solid #d3eaff;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-container h1 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #045394;
    }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        font-size: 14px;
        color: #045394;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 2px solid #cce6ff;
        border-radius: 8px;
        transition: border-color 0.3s;
        background-color: white;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #66b3ff;
        outline: none;
    }

    .btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: bold;
        transition: background-color 0.3s;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    .form-errors {
        color: red;
        font-size: 12px;
        margin-top: 5px;
    }
</style>

<div class="logo-container">
    <img src="{{ asset('images/images.png') }}" alt="CertiDeal Logo">
</div>

<div class="register-container">
    <h1>Cr√©er un compte</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.password) }}
            {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.password) }}
        </div>

        <div class="form-group">
            {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn'}}) }}
        </div>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
